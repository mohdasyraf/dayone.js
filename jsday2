//FUNCTION

// 1) Declaring a fumction
function sayHello(){
  console.log("Hello");
}
function sayHi(){
  console.log("Hi");
}

//invoking or calling a function
sayHello();
sayHi();

//3) Function with parameter (formula)
function goodbye(name){
  console.log("goodbye"+name);
}

//4) Invoking function with parameter
goodbye("Asyraf");

// 5) A function can return an answer
function sum(a,b){
  return a+b;
}
// calling function return an answer
var sum1 = sum(2,3);
console.log(sum1);
console.log(sum(2,5));

//6) Returning more than one item/answer (variable need to specific)
function calculateAreavolume(panjang,lebar,tinggi){ //define the formula yang nak dikira
return [panjang*lebar, panjang*lebar*tinggi]
}
console.log(calculateAreavolume(2,3,4)) //pengiraan akan dijanakan mengikut nilai

////ARRAY
// retrieving an item from array
// give the index of an array, index start with zero
var markah = [80,70,90,60,50];
console.log(markah[0]); //letak number kat sini will define mana markah dalam var yang diretrieve
console.log(markah[2]);


//2) Get the lenght of an array
console.log(markah.length)

//3) Add an item at the end of an array
markah.push(80); // place push to add item at the end of an array
console.log(markah);

//4) Remove an item at the end of the array (only one)
markah.pop();
console.log(markah);

for (var i = 0; i < markah.length;i++){
  console.log("Item number "+(i+1) +" is "+markah[i]);
}
